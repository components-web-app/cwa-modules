{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom"
    ],
    "types": [
      "@types/node",
      "@types/jest",
      "@nuxt/types",
      "@nuxtjs/auth-next",
      "@nuxt/components",
      "./src/shim"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    // "declarationDir": "temp/types",
    "paths": {
      "@cwa/nuxt-module/*": [
        "./src/*"
      ],
      "~/*": [
        "./demo/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/**/*.spec.ts"
  ]
}
