{
  "name": "@cwamodules/cwa",
  "version": "0.0.1",
  "description": "Nuxt Module for Silverback's Components Web Apps and API Components Bundle API",
  "license": "MIT",
  "contributors": [
    "Daniel West <daniel@silverback.is>"
  ],
  "repository": "https://github.com/components-web-app/cwa-nuxt-module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/module/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build:css": "node-sass src/ -o dist/ ",
    "watch:css": "yarn build:css && node-sass src/ -o dist/ -w -r",
    "build": "yarn build:css && tsc",
    "clean": "rm -rf dist && rm -rf tests/fixture/.nuxt && rm -rf demo/.nuxt",
    "dev": "nuxt-ts demo",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint-fix": "yarn lint --fix",
    "release": "yarn clean && yarn build && standard-version && git push --follow-tags && npm publish",
    "start": "nuxt-ts start demo",
    "test": "yarn lint && yarn build && nuxt build tests/fixture && jest"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "consola": "^2.12.2",
    "milligram": "^1.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "latest",
    "@babel/preset-typescript": "latest",
    "@nuxt/components": "latest",
    "@nuxt/types": "latest",
    "@nuxt/typescript-build": "latest",
    "@nuxt/typescript-runtime": "latest",
    "@nuxtjs/auth-next": "latest",
    "@nuxtjs/axios": "latest",
    "@nuxtjs/dotenv": "latest",
    "@nuxtjs/eslint-config-typescript": "latest",
    "@nuxtjs/style-resources": "latest",
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/node-sass": "latest",
    "babel-jest": "latest",
    "eslint": "latest",
    "get-port": "latest",
    "jest": "latest",
    "jsdom": "latest",
    "json-server": "latest",
    "mock-json-schema": "latest",
    "node-sass": "latest",
    "nuxt-edge": "latest",
    "puppeteer": "latest",
    "sass-loader": "latest",
    "ssl-root-cas": "latest",
    "standard-version": "latest",
    "typescript": "latest"
  }
}
