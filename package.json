{
  "name": "@cwamodules/cwa",
  "version": "0.0.1",
  "description": "Nuxt Module for Silverback's Components Web Apps and API Components Bundle API",
  "license": "MIT",
  "contributors": [
    "Daniel West <daniel@silverback.is>"
  ],
  "repository": "https://github.com/components-web-app/cwa-nuxt-module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/module/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build:css": "node-sass src/ -o dist/ ",
    "watch:css": "yarn build:css && node-sass src/ -o dist/ -w -r",
    "build": "yarn build:css && tsc",
    "clean": "rm -rf dist && rm -rf tests/fixture/.nuxt && rm -rf demo/.nuxt",
    "dev": "nuxt-ts demo",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint-fix": "yarn lint --fix",
    "release": "yarn clean && yarn build && standard-version && git push --follow-tags && npm publish",
    "start": "nuxt-ts start demo",
    "test": "yarn lint && yarn build && nuxt build tests/fixture && jest"
  },
  "dependencies": {
    "@nuxt/components": "^0.3.4",
    "@nuxtjs/auth-next": "latest",
    "@nuxtjs/axios": "^5.11.0",
    "@nuxtjs/dotenv": "^1.4.1",
    "bluebird": "^3.7.2",
    "consola": "^2.13.0",
    "milligram": "^1.4.0",
    "nuxt-edge": "^2.13.0-26467214.85383688",
    "sass-resources-loader": "^2.0.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@nuxt/types": "^0.7.9",
    "@nuxt/typescript-build": "^0.6.6",
    "@nuxt/typescript-runtime": "^0.4.6",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/style-resources": "^1.0.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^12.12.47",
    "@types/node-sass": "^4.11.1",
    "babel-jest": "^26.0.1",
    "eslint": "^6.8.0",
    "jest": "^25.5.0",
    "jsdom": "^16.2.2",
    "mock-json-schema": "^1.0.8",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "ssl-root-cas": "^1.3.1",
    "standard-version": "^8.0.0",
    "typescript": "~3.8.3"
  }
}
