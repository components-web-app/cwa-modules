{
  "name": "@cwa/nuxt3",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "description": "Components Web Apps Nuxt Module. UI for creating component-driven web apps with the API Components Bundle",
  "author": "Daniel West <daniel@silverback.is>",
  "repository": "https://github.com/components-web-app/cwa-nuxt-module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build && pnpm run postcss && pnpm run postcss:base && sleep 0.2 && pnpm run copy-layer",
    "copy-layer": "copyfiles -u 1 \"./src/layer/**\" dist/",
    "dev": "concurrently --kill-others \"pnpm postcss:watch\" \"pnpm dev:https\"",
    "dev:https": "nuxi dev playground --https",
    "dev:http": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:start": "nuxi start playground",
    "dev:prepare": "pnpm run postcss && pnpm run postcss:base && nuxt-module-build --stub && nuxi prepare playground",
    "lint": "eslint --ext .ts,.js,.vue .",
    "lint:fix": "eslint --fix --ext .ts,.js,.vue .",
    "test": "vitest --run --reporter=verbose",
    "test:watch": "vitest --watch --reporter=verbose",
    "test:watch:coverage": "vitest --watch --coverage --reporter=verbose",
    "test:coverage": "vitest --run --coverage --reporter=verbose",
    "stryker:init": "stryker init",
    "stryker:run": "stryker run",
    "postcss": "postcss src/tailwind/tailwind.css -o ./src/runtime/templates/assets/main.css",
    "postcss:watch": "postcss src/tailwind/tailwind.css -o ./src/runtime/templates/assets/main.css --watch",
    "postcss:base": "postcss src/tailwind/tailwind-base.css -o ./src/runtime/templates/assets/base.css"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.3.2",
    "@pinia/nuxt": "^0.4.11",
    "@popperjs/core": "^2.11.8",
    "@vueuse/core": "^10.7.2",
    "consola": "^3.2.3",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nuxt": "3.9.3 || ^3.10.1",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.15",
    "vuejs-confirm-dialog": "^0.5.1"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.17",
    "@nuxt/kit": "3.9.3 || ^3.10.1",
    "@nuxt/module-builder": "^0.4.0",
    "@nuxt/schema": "^3.10.0",
    "@nuxt/test-utils": "^3.11.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/tailwindcss": "^6.11.2",
    "@pinia/testing": "^0.0.14",
    "@stryker-mutator/core": "^7.3.0",
    "@stryker-mutator/vitest-runner": "^7.3.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.2.2",
    "@vue/test-utils": "2.4.1",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "happy-dom": "^12.10.3",
    "playwright-core": "^1.41.1",
    "postcss-cli": "^10.1.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "1.1.1",
    "vitest-environment-nuxt": "^1.0.0"
  },
  "pnpm": {
    "overrides": {
      "vite": ">=5.0.12",
      "semver": ">=7.5.2"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2020-8203"
      ]
    }
  },
  "overrides": {
    "vite": ">=5.0.12",
    "semver": ">=7.5.2"
  },
  "engines": {
    "pnpm": ">=8.11.0"
  }
}
